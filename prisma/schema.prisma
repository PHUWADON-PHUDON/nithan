generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model nithan {
  id Int @id @default(autoincrement())
  title String
  content String?
  favorite Int?
  createAt DateTime @default(now())
  images image[]
  favorites favorite[]
}

model image {
  id Int @id @default(autoincrement())
  nithanid Int
  imagename String?
  nithan nithan @relation(fields: [nithanid], references: [id])
  createAt DateTime @default(now())
}

model user {
  id Int @id @default(autoincrement())
  name String
  gmail String @unique
  password String
  favorites favorite[]
}

model favorite {
  id Int @id @default(autoincrement())
  fav Int
  userid Int
  user user @relation(fields: [userid], references: [id])
  nithanid Int
  nithan nithan @relation(fields: [nithanid], references: [id])
}